<!DOCTYPE html>
  <html>
  <head>
      <meta charset="utf-8">
      <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
      <title>title</title>
      <link rel="stylesheet" type="text/css" href="../css/api.css"/>
          <link rel="stylesheet" type="text/css" href="../css/aui.css" />
      <style>
          body{

          }
           .login-third {
                margin-top: 3rem;
            }
              </style>
  </head>
  <body>
    <section class="aui-content aui-margin-t-15 login-third">
        <ul class="aui-list aui-form-list">
            <li class="aui-list-item">
                <div class="aui-list-item-inner">
                    <div class="aui-list-item-label aui-border-r color-orange">
                        用户名
                        <!-- <small class="aui-margin-l-5 aui-text-warning">+86</small> -->
                    </div>
                    <div class="aui-list-item-input aui-padded-l-10">
                        <input type="text"  placeholder="请输入用户名" id="userName" value="student">
                        <!-- pattern="[0-9]*" -->
                    </div>

                </div>
            </li>
            <li class="aui-list-item">
                <div class="aui-list-item-inner">
                    <div class="aui-list-item-label aui-border-r color-orange">
                        密码
                        <!-- <small class="aui-margin-l-5 aui-text-warning">+86</small> -->
                    </div>
                    <div class="aui-list-item-input aui-padded-l-10">
                        <input type="text"  placeholder="请输入密码" id="passWord" value="student">
                    </div>
                </div>
            </li>
          </li>
          <li class="aui-list-item">
              <div class="aui-list-item-inner">
                  <div class="aui-list-item-label aui-border-r color-orange">
                      请选择班级
                      <!-- <small class="aui-margin-l-5 aui-text-warning">+86</small> -->
                  </div>
                  <div class="aui-list-item-input aui-padded-l-10">
                    <select   id="select_class">
                    </select>
                  </div>
              </div>
          </li>
          <li class="aui-list-item">
              <div class="aui-list-item-inner">
                  <div class="aui-list-item-label aui-border-r color-orange">
                      请选择角色
                      <!-- <small class="aui-margin-l-5 aui-text-warning">+86</small> -->
                  </div>
                  <div class="aui-list-item-input aui-padded-l-10">
                    <select id="select_type">
                      <option value="1">教师</option>
                      <option value="2">学生</option>
                    </select>
                  </div>
              </div>
          </li>
        </ul>
    </section>
    <section class="aui-content-padded">
        <div class="aui-btn aui-btn-block aui-btn-info aui-btn-sm" tapmode onclick="btn_register()">注册</div>
    </section>
    <section class="aui-content-padded">
        <div class="aui-btn aui-btn-block aui-btn-info aui-btn-sm" tapmode onclick="btn_back()">返回登陆页</div>
    </section>
  </body>
  <script type="text/javascript" src="../script/api.js"></script>
  <script type="text/javascript" src="../script/SHA1.js"></script>
  <script   type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script type="text/javascript">
      var depts=[];
      //返回
      btn_back=function(){



          api.closeFrame();
      }
      //注册
      btn_register=function(){
          //获取用户名
           var username = $api.byId('userName').value;
            searchUsername(username);
        };
      //查询是否已存在注册用户名相关的数据、若存在则不允许注册 返回False、不存在则允许注册 返回true
      searchUsername=function(username){
        var model = api.require('model');
        model.config({
            appKey: '70BC0B84-4138-6270-1519-FE3BC91D0344',
            host: 'https://d.apicloud.com'
        });
      var query = api.require("query");
      query.createQuery(function(ret, err) {
              if (ret && ret.qid) {
                  var queryId = ret.qid;

                  query.whereEqual({
                      qid: queryId,
                      column: "username",
                      value: username
                  });

                  query.limit({
                      qid:queryId,
                      value:"20"
                  });

                  var model = api.require("model");

                  model.findAll({
                      class: "sign_user",
                      qid: queryId
                  }, function(ret, err){
                    if(ret){
                      // alert(JSON.stringify(ret.length))
                      if (ret.length==0) {
                        registerUser(username);
                      }else {
                        alert("用户名已存在，无法继续注册。")
                      }

                    }else {
                        alert("网络异常、请稍后再次尝试")
                    }
                      // alert("ret: " + JSON.stringify(ret.length) + "\nerr: " + JSON.stringify(err));
                  });
              }
          });

      }
      //注册
      registerUser=function(username){
        var password = $api.byId('passWord').value;
        //获取角色id
        var  myselect=$api.byId('select_type');
        var roleSelect = myselect.options[myselect.selectedIndex].value;
        console.log( myselect.options[myselect.selectedIndex].innerHTML);
        //获取所选班级 序号
        var  deptId=$api.byId('select_class');
        var deptSelect = depts[deptId.options[deptId.selectedIndex].value].id;
        var model = api.require('model');
        model.config({
            appKey: '70BC0B84-4138-6270-1519-FE3BC91D0344',
            host: 'https://d.apicloud.com'
        });
        model.insert({
            class: "sign_user",
            value: {
            "username": username,
            "password": password,
            "role": roleSelect,
            "dept_ids": [deptSelect]
          }
        }, function(ret, err){
          api.alert({
              title: '提示消息',
              msg: username+"  注册成功",
          });
            // finsh;
        });

      }


      //页面加载函数
      apiready = function(){
        var model = api.require('model');
        model.config({
            appKey: '70BC0B84-4138-6270-1519-FE3BC91D0344',
            host: 'https://d.apicloud.com'
        });
        var query = api.require("query");
        query.createQuery(function(ret, err) {
          if (ret && ret.qid) {
              var queryId = ret.qid;
              query.whereEqual({
                  qid: queryId,
                  column: "",
                  value: ""
              });
              query.limit({
                  qid:queryId,
                  value:"20"
              });
              var model = api.require("model");
              model.findAll({
                  class: "dept",
                  qid: queryId
              }, function(ret, err){
                  depts=ret;
                  var select=document.getElementById("select_class");
                  for(var i=0; i<ret.length;i++){     //循环添加多个值
                    var option1 = document.createElement("option");
                     option1.innerHTML = ret[i].name;
                     option1.value=i;
                     select.appendChild(option1);
              }
              });
          }
        });
      };
  </script>
  </html>
